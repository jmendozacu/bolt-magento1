<config>

    <modules>
        <Bolt_Custom>
            <version>0.1.0</version>
        </Bolt_Custom>
    </modules>

    <global>
        <helpers>
            <boltcustom>
                <class>Bolt_Custom_Helper</class>
            </boltcustom>
        </helpers>
        <models>
            <boltcustom>
                <class>Bolt_Custom_Model</class>
            </boltcustom>
        </models>
        <events>
            <bolt_boltpay_filter_shipping_label>
                <observers>
                    <bolt_custom_add_delivery_estimate_to_label>
                        <class>Bolt_Custom_Model_Observer</class>
                        <method>addDeliveryEstimateTitle</method>
                        <depends>
                            <Bolt_Boltpay />
                        </depends>
                    </bolt_custom_add_delivery_estimate_to_label>
                </observers>
            </bolt_boltpay_filter_shipping_label>
            <bolt_boltpay_filter_discount_amount>
                <observers>
                    <bolt_custom_customer_balance_amount>
                        <class>Bolt_Custom_Model_Observer</class>
                        <method>addCustomerBalanceAmount</method>
                        <depends>
                            <Bolt_Boltpay />
                        </depends>
                    </bolt_custom_customer_balance_amount>
                </observers>
            </bolt_boltpay_filter_discount_amount>
            <bolt_boltpay_order_creation_before>
                <observers>
                    <bolt_custom_reward_points_transfer_from_parent_to_immutable>
                        <class>Bolt_Custom_Model_Observer</class>
                        <method>transferRewardPoints</method>
                        <depends>
                            <Bolt_Boltpay />
                        </depends>
                    </bolt_custom_reward_points_transfer_from_parent_to_immutable>
                </observers>
            </bolt_boltpay_order_creation_before>
            <bolt_boltpay_validate_totals_before>
                <observers>
                    <bolt_custom_reward_points_update_totals>
                        <class>Bolt_Custom_Model_Observer</class>
                        <method>updateTotalsForRewardPoints</method>
                        <depends>
                            <Bolt_Boltpay />
                        </depends>
                    </bolt_custom_reward_points_update_totals>
                </observers>
            </bolt_boltpay_validate_totals_before>
        </events>
    </global>
</config>
